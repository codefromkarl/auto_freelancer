# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=securepassword123
TIMEZONE=Asia/Shanghai

# Cloudflare Tunnel
# Run 'cloudflared tunnel token <NAME>' to get this token after creating a tunnel in CF dashboard
CLOUDFLARE_TUNNEL_TOKEN=eyJhIjoi...

# The domain you assigned to the tunnel (e.g., n8n.yourdomain.com)
DOMAIN_NAME=n8n.yourdomain.com

# Freelancer API
# Get these from Freelancer Developer Portal
FREELANCER_APP_ID=your_app_id
FREELANCER_APP_SECRET=your_app_secret
FREELANCER_OAUTH_TOKEN=your_oauth_token
FREELANCER_USER_ID=12345678

# AI Configuration (Zhipu AI / GLM-4)
ZHIPU_API_KEY=your_zhipu_api_key
ZHIPU_API_URL=https://open.bigmodel.cn/api/coding/paas/v4/chat/completions

# Python Service Security
# Secret key for n8n to authenticate with Python service
PYTHON_API_KEY=your_secure_random_string

# Legacy AI Placeholders (Optional)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Telegram Bot (Configuration Required)
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot and follow instructions
# 3. Paste the Token below
